<div class="view">
  <input class="toggle" type="checkbox" {{action "handleToggle" on="change"}} {{bind-attr checked=todo.finished}}>
  {{#unless isEditing}}
    <label {{action "handleEditStart" on="doubleClick"}}>{{todo.description}}</label>
  {{/unless}}
  <button class="destroy"></button>
</div>
{{#if isEditing}}
  <input class="edit" type="text" {{action "handleBlur" on="focusOut"}} {{bind-attr value=description}}/>
{{/if}}
